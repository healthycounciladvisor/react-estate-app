<footer class="footer fondo_footer">
<div class="pusher">
  <div class="container">
    <div class="row flex-md" style="">
      <div class="col-sm-4 col-xs-6 copyright">
        <div class="col">
          <h4><%= @current_agency.company_name %></h4>
          <ul class="contact">
            <li>      
              <%= agency_info(@current_agency, "phone_number_primary", "tel", "fa-phone") %>
            </li>
            <li>
              <%= agency_info(@current_agency, "email_primary", "email", "fa-envelope") %>
            </li>
          </ul>
        </div>
      </div>
      <div class="col-sm-4 col-xs-6 social-default flex-col" style="">
        <div style="display: flex;margin-top: auto;">
        <%= social_media_link(@current_website, "facebook", "Facebook", "fa-facebook fa-2x") %>
        <%= social_media_link(@current_website, "twitter", "Twitter", "fa-twitter fa-2x") %>
        <%= social_media_link(@current_website, "linkedin", "Linked In", "fa-linkedin fa-2x") %>
        <%= social_media_link(@current_website, "youtube", "YouTube", "fa-youtube fa-2x") %>
        <%= social_media_link(@current_website, "pinterest", "Pinterest", "fa-pinterest fa-2x") %>
        <%= social_media_link(@current_website, "gplus", "Google Plus", "fa-google-plus fa-2x") %>
        </div>
      </div>
      <div class="col-sm-4 col-xs-6 flex-col">
        <div class="footer-extra">
          <%== @footer_content.raw %>
        </div>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-sm-6 copyright">
        <%= render_footer_links %>
        <%# link_to I18n.t("navbar.admin"), pwb.admin_with_locale_path(locale: locale)  %>
      </div>
      <div class="col-sm-6">
        <p  style="float: right;">Powered by <a href="http://propertywebbuilder.com">PropertyWebBuilder</a></p>
      </div>
    </div>
  </div>
</div>
</footer>