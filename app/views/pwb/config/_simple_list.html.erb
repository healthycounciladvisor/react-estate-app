<script type="text/x-template" id="simple-list">
  <v-container fluid>
    <v-flex xs12>
      <v-list two-line>
        <template v-for="item in listItems">
          <v-subheader v-if="item.header" v-text="item.header"></v-subheader>
          <v-divider v-else-if="item.divider" v-bind:inset="item.inset"></v-divider>
          <v-list-tile avatar v-else v-bind:key="item.title" @click="">
            <v-list-tile-avatar>
            </v-list-tile-avatar>
            <v-list-tile-content>
              <v-list-tile-title v-html="item.page_slug"></v-list-tile-title>
              <v-list-tile-sub-title v-html="item.slug"></v-list-tile-sub-title>
            </v-list-tile-content>
          </v-list-tile>
        </template>
      </v-list>
    </v-flex>
    <v-snackbar :timeout="2500" :top="true" :error="true" :multi-line="true" v-model="snackbar">
      {{ errText }}
      <v-btn flat light @click.native="snackbar = false">Close</v-btn>
    </v-snackbar>
  </v-container>
</script>
