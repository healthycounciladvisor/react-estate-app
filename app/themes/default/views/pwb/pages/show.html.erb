  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h2>
          <%= @page.link_title %>
        </h2>
      </div>
      <div class="col-md-6" style="">
        <ol class="breadcrumb">
          <li><a href="/">
              <%= I18n.t("webContentSections.home") %>
            </a></li>
          <li class="active">
            <%= @page.link_title %>
          </li>
        </ol>
